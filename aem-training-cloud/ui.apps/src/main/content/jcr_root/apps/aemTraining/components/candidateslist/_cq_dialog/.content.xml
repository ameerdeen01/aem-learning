<?xml version="1.0" encoding="UTF-8"?>
<jcr:root
        xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
        xmlns:cq="http://www.day.com/jcr/cq/1.0"
        xmlns:jcr="http://www.jcp.org/jcr/1.0"
        jcr:primaryType="nt:unstructured"
        jcr:title="Candidates List"
        sling:resourceType="cq/gui/components/authoring/dialog"
        helpPath=""
        cq:dialogMode="floating">

    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">

        <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/layouts/fixedcolumns" />

        <items jcr:primaryType="nt:unstructured">
            <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">

                <items jcr:primaryType="nt:unstructured">

                    <!-- Heading Field -->
                    <heading
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Heading"
                            name="./heading" />

                    <!-- Multifield for Candidates -->
                    <candidates
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                            fieldLabel="Candidates"
                            composite="{Boolean}true">

                        <field
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                name="./candidates">

                            <items jcr:primaryType="nt:unstructured">

                                <!-- Candidate Name -->
                                <name
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        name="./name"
                                        fieldLabel="Candidate Name" />

                                <!-- Candidate Image -->
                                <image
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                        name="./image"
                                        fieldLabel="Candidate Image"
                                        rootPath="/content/dam"
                                        filter="assets"/>

                                <!-- Nested Multifield for Technologies -->
                                <technologies
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        fieldLabel="Technologies"
                                        composite="{Boolean}true">

                                    <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                            name="./technologies">

                                        <items jcr:primaryType="nt:unstructured">
                                            <tech
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    name="./tech"
                                                    fieldLabel="Technology" />
                                        </items>
                                    </field>
                                </technologies>
                            </items>
                        </field>
                    </candidates>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
